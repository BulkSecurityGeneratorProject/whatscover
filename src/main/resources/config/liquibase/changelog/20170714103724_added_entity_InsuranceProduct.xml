            </column>

            <column name="entry_age_last_bday" type="integer">
                <constraints nullable="true" />
            </column>

            <column name="gender" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="premium_term" type="integer">
                <constraints nullable="true" />
            </column>

            <column name="policy_term" type="integer">
                <constraints nullable="true" />
            </column>

            <column name="premium_rate" type="double">
                <constraints nullable="true" />
            </column>

            <column name="sum_assured_death" type="double">
                <constraints nullable="true" />
            </column>

            <column name="sum_assured_tpd" type="double">
                <constraints nullable="true" />
            </column>

            <column name="sum_assured_add" type="double">
                <constraints nullable="true" />
            </column>

            <column name="sum_assured_hosp_income" type="double">
                <constraints nullable="true" />
            </column>

            <column name="sum_assured_ci" type="double">
                <constraints nullable="true" />
            </column>

            <column name="sum_assured_medic" type="double">
                <constraints nullable="true" />
            </column>

            <column name="sum_assured_cancer" type="double">
                <constraints nullable="true" />
            </column>

            <column name="product_weight_death" type="double">
                <constraints nullable="true" />
            </column>

            <column name="product_weight_pa" type="double">
                <constraints nullable="true" />
            </column>

            <column name="product_weight_hosp_income" type="double">
                <constraints nullable="true" />
            </column>

            <column name="product_weight_ci" type="double">
                <constraints nullable="true" />
            </column>

            <column name="product_weight_medic" type="double">
                <constraints nullable="true" />
            </column>

            <column name="product_weight_cancer" type="double">
                <constraints nullable="true" />
            </column>

            <column name="insurance_company_id" type="bigint">
                <constraints nullable="false" />
            </column>
            <column name="created_by" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="timestamp" defaultValueDate="${now}">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_by" type="varchar(50)"/>
            <column name="last_modified_date" type="timestamp"/>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
        </createTable>
        
    </changeSet>
</databaseChangeLog>
